# Makefile.in for Easel's miniapps
# SVN $Id$
SHELL = /bin/sh

## Installation targets
#
prefix      = @prefix@
exec_prefix = @exec_prefix@
datarootdir = @datarootdir@
bindir      = @bindir@


## your compiler and compiler flags.
#
CC       = @CC@
CFLAGS   = @CFLAGS@ @SIMD_CFLAGS@
DEFS     = @DEFS@
LDFLAGS  = @LDFLAGS@
LIBS     = -leasel @LIBGSL@ @LIBS@ -lm

## where is Easel?
#
ESLLIBDIR = -L..
ESLINCDIR = -I..


## list of the miniapps to compile.
#
PROGS = esl-afetch\
	esl-alimanip\
	esl-alistat\
	esl-cluster\
	esl-compstruct\
	esl-histplot\
	esl-reformat\
	esl-selectn\
	esl-seqstat\
	esl-sfetch\
	esl-shuffle\
	esl-weight

## Targets defining how to make miniapp executables.
#
all: 	$(PROGS) 

${PROGS}: @EXEC_DEPENDENCY@  ../libeasel.a
	${CC} ${CFLAGS} ${DEFS} ${LDFLAGS} ${ESLLIBDIR} -o $@ $@.o ${OBJS} ${LIBS}

.c.o:
	${CC} ${CFLAGS} ${DEFS} ${ESLINCDIR} -c $<

install:
	cp ${PROGS} ${DESTDIR}${bindir}/

clean:
	-rm ${PROGS}
	-rm *.o *~
	-rm TAGS

distclean:
	make clean
	-rm -f ${PROGS}
	-rm Makefile

TAGS:
	etags *.[ch] Makefile.in


