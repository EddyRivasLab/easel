################################################################
# Makefile for Easel
# SVN $Id$

CC      = @CC@
CFLAGS  = @CFLAGS@
AR      = @AR@ rcv
LN      = ln
RANLIB  = @RANLIB@

HEADERS = \
	easel.h\
	esl_alphabet.h\
	esl_getopts.h\
	esl_keyhash.h\
	esl_msa.h\
	esl_random.h\
	esl_regexp.h\
	esl_sqio.h\
	esl_stack.h\
	esl_wuss.h

OBJS    = \
	easel.o\
	esl_alphabet.o\
	esl_getopts.o\
	esl_keyhash.o\
	esl_msa.o\
	esl_random.o\
	esl_regexp.o\
	esl_sqio.o\
	esl_stack.o\
	esl_wuss.o

all: libeasel.a

.c.o:
	${CC} -I. ${CFLAGS} ${DEFS} -c $<		

libeasel.a: $(OBJS)
	$(AR) libeasel.a $(OBJS)
	$(RANLIB) libeasel.a
	chmod 644 libeasel.a

clean:
	-rm -f ${OBJS} libeasel.a
	-rm -f *~ TAGS
	-rm -f core.[0-9]*
	-rm -f config.log config.status
	-rm -f example test

distclean:
	(cd documentation; make distclean)
	(cd miniapps; make distclean)
	make clean
	-rm easel.h
	-rm -rf autom4te.cache
	-rm Makefile

tags:
	etags *.[ch] Makefile



# magic SVN for setting keyword ID replacement on a new module foo:
# svn propset svn:keywords "Id" foo.[ch]

